@model IEnumerable<Veterinary>
@{
    ViewData["Title"] = "Index";
}

@if (Model.Count() != 0)
{
    <h1>Vets CareTakers by @ViewBag.Name</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>VetId</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var veterinary in Model)
            {
                <tr>
                    <td>@veterinary.Id</td>
                    <td>@veterinary.Name</td>
                    <td>@veterinary.VetId</td>
                    <td><a asp-action="RemoveVeterinaryFromAnimal" class="btn btn-danger" asp-route-id=@ViewBag.AnimalId asp-route-vetId=@veterinary.Id>Remove vet caretaker</a> </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h1>@ViewBag.Name do not have any animals!</h1>
}

